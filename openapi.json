{
  "openapi": "3.0.0",
  "info": {
    "title": "DemoCar SOVD",
    "version": "0.2",
    "description": "Realistic demo vehicle with simulated CAN data and web control"
  },
  "servers": [
    {
      "url": "https://dummy-sovd-server.onrender.com"
    }
  ],
  "paths": {
    "/about": {
      "get": {
        "summary": "Vehicle info",
        "responses": {
          "200": {
            "description": "Basic vehicle information",
            "content": {
              "application/json": {
                "example": {
                  "name": "DemoCar",
                  "version": "0.2",
                  "description": "Realistic demo vehicle with simulated CAN data and web control"
                }
              }
            }
          }
        }
      }
    },
    "/components": {
      "get": {
        "summary": "Get current vehicle state",
        "responses": {
          "200": {
            "description": "Current components and state",
            "content": {
              "application/json": {
                "example": {
                  "engine": "stopped",
                  "brake": "released",
                  "battery": { "voltage": 12.6, "status": "idle" },
                  "rpm": 0,
                  "temperature": 25.0
                }
              }
            }
          }
        }
      }
    },
    "/command": {
      "post": {
        "summary": "Send command to vehicle",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cmd": {
                    "type": "string",
                    "enum": ["START_ENGINE", "STOP_ENGINE", "APPLY_BRAKE", "RELEASE_BRAKE"]
                  }
                },
                "required": ["cmd"]
              },
              "example": { "cmd": "START_ENGINE" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Command received and vehicle state updated",
            "content": {
              "application/json": {
                "example": {
                  "status": "ok",
                  "vehicle_state": {
                    "engine": "running",
                    "brake": "released",
                    "battery": { "voltage": 13.2, "status": "charging" },
                    "rpm": 1200,
                    "temperature": 78.5
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
